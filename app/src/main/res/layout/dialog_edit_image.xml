<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog_edit_contact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="20dip"
        android:layout_marginEnd="20dip"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/proximanovaregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dip"
            android:textStyle="bold"
            android:text="Edit avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:id="@+id/choose_gallery_edit_img_avatar"
                android:background="?selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RedButton"
                android:text="Select avatar"/>

            <ImageView
                android:id="@+id/show_edit_avatar"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_launcher"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_margin="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:paddingStart="20dip"
                android:paddingEnd="20dip"
                android:layout_margin="10dip"
                android:id="@+id/btn_cancel_avatar"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:layout_width="100dip"
                android:gravity="center"
                android:layout_height="40dip"
                android:textSize="17dip"
                android:text="Cancel"
                android:layout_marginStart="10dip"/>

            <TextView
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:paddingStart="20dip"
                android:paddingEnd="20dip"
                android:layout_margin="10dip"
                android:id="@+id/btn_save_avatar"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:gravity="center"
                android:textSize="17dip"
                android:text="Save"
                android:layout_marginEnd="10dip"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>