<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog_edit_contact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="20dip"
        android:layout_marginEnd="20dip"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/proximanovaregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dip"
            android:textStyle="bold"
            android:text="Edit contact"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dip"
                    android:textSize="20dip"
                    android:layout_height="match_parent"
                    android:text="Sex"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/is_checked_male_contact"
                    android:text="Nam"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/is_checked_female_contact"
                    android:text="Ná»¯"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/et_name_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>

        <EditText
            android:id="@+id/et_phone_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/et_address_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />

        <RelativeLayout
            android:layout_margin="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:paddingStart="20dip"
                android:paddingEnd="20dip"
                android:layout_margin="10dip"
                android:id="@+id/btn_cancel_contact"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:layout_width="100dip"
                android:gravity="center"
                android:layout_height="40dip"
                android:textSize="17dip"
                android:text="Cancel"
                android:layout_marginStart="10dip"/>

            <TextView
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:paddingStart="20dip"
                android:paddingEnd="20dip"
                android:layout_margin="10dip"
                android:id="@+id/btn_save_contact"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:gravity="center"
                android:textSize="17dip"
                android:text="Save"
                android:layout_marginEnd="10dip"/>
    </RelativeLayout>


    </LinearLayout>

</RelativeLayout>